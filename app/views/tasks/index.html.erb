<h1>My tasks</h1>

<ul>
<% @tasks.each do |t| %>
  <li><%= link_to "#{t[:title]} --- #{t[:completed] === true ? "completed" : "not completed"}", "/tasks/#{t[:id]}" %>
    <%= link_to task_path(t.id), method: :delete, data: { confirm: "Delete #{t.title}?" } do %>
      <i class="fa fa-trash-o" aria-hidden="true"></i>
    <% end %>
  </li>
<% end %>
</ul>

<%= link_to "Add a new task", "/new" %>
